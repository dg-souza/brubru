DB_PASSWORD=123
JWT_SECRET=ecommerce
JWT_REFRESH_SECRET=ecommerce-entrevista
# CORS origin (use '*' for dev or set your frontend URL)
CORS_ORIGIN=*

# Keep-alive settings
# Set KEEP_ALIVE=false to disable internal self-ping
KEEP_ALIVE=true
# Interval in milliseconds (default 60000 = 1 minute)
KEEP_ALIVE_INTERVAL_MS=60000
# If your deployment exposes a public URL, set it here so the backend pings the public URL
# e.g. KEEP_ALIVE_URL=https://brubru.onrender.com
KEEP_ALIVE_URL=https://brubru.onrender.com

# Numeric port used by app.listen (optional, defaults to 5000)
LISTEN_PORT=5000
PORT=https://brubru.onrender.com